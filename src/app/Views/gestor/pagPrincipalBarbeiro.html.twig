{% extends "BaseBarbeiro.html.twig" %}

{% block title %}
  <title>{{ title }}</title>
{% endblock %}

{% block css %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
  <link rel="stylesheet" href="/public/assets/css/pagPrincipalBarbeiro.css">
{% endblock %}

{% block main %}
  <main class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-column flex-sm-row text-center text-sm-start">
      <h1 class="mb-2 mb-sm-0 fw-semibold">
        Tudo beleza, <span class="text-success fw-bold">{{ nome }}?</span>
      </h1>
    </div>

    <div class="text-center">
      <h1 class="fw-semibold text-success display-4">R$ 760,00</h1>
      <h6 class="mt-2 fw-semibold">Faturamento do mês</h6>
      <a href="#" class="link"><small>Ver mais</small></a>
    </div>

    <br><br>

    <!-- Seção Agendamentos -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-column flex-sm-row text-center text-sm-start">
      <h5 class="mb-2 mb-sm-0 fw-semibold">Agendamentos a confirmar</h5>
    </div>

    {% for ag in agendamentos %}
      <div class="card perfil-card shadow-sm mb-3">
        <div class="card-body d-flex justify-content-between align-items-center flex-wrap">
          <div class="d-flex align-items-start">
            <div class="icon-box me-3">
              <i class="bi bi-scissors fs-4"></i>
            </div>
            <div>
              <h6 class="mb-1 fw-semibold">Serviços: {{ ag.servicos }}</h6>
              <small>Cliente: <span class="text-success fw-bold">{{ ag.cliente }}</span></small><br>
              <small>Data: <span class="text-success fw-bold">{{ ag.data|date("d/m/Y") }}</span></small><br>
              <small>Hora agendada: <span class="fw-bold text-success">{{ ag.hora }}</span></small><br>
              <small>Valor a receber: <span class="fw-bold text-success">R$ {{ ag.valor }}</span></small>
            </div>
          </div>
          <div class="d-flex align-items-center mt-3 mt-sm-0">
            <button class="btn btn-sm btn-success me-1" onclick="confirmarAgendamento('{{ ag.id }}')">
              <i class="bi bi-check-lg fs-5"></i>
            </button>
            <button class="btn btn-sm btn-danger" onclick="recusarAgendamento('{{ ag.id }}')">
              <i class="bi bi-x-lg fs-5"></i>
            </button>
          </div>
        </div>
      </div>
    {% else %}
      <p class="text-center text-muted">Nenhum agendamento pendente.</p>
    {% endfor %}

    <div class="text-center mt-3">
      <a href="/agendamentos" class="link"><small>Ver mais</small></a>
    </div>

    <br><br>

    <!-- Seção Estoque -->
    <div class="d-flex justify-content-between align-items-center mb-1 flex-column flex-sm-row text-center text-sm-start">
      <h5 class="mb-2 mt-2 mb-sm-0 fw-semibold">Meu Estoque</h5>
    </div>

    {% for item in itens %}
      <div class="col-12">
        <div class="card perfil-card shadow-sm">
          <div class="card-body d-flex justify-content-between align-items-center flex-wrap">
            <div class="d-flex align-items-center">
              <div class="icon-box me-3">
                <i class="bi bi-droplet fs-4"></i>
              </div>
              <div>
                <h6 class="mb-1 fw-semibold">{{ item.nome }}</h6>
                <small>Quantidade em estoque:
                  <span class="{% if item.quantidade <= 5 %}text-danger{% else %}text-success{% endif %} fw-bold">
                    {{ item.quantidade }} unidades
                  </span>
                </small><br>
                <small>Validade:
                  <span class="fw-bold">{{ item.validade|date("d/m/Y") }}</span>
                </small>
              </div>
            </div>
            <div class="d-flex align-items-center mt-3 mt-sm-0">
              <a href="/estoque/editar/{{ item.id }}" class="btn btn-sm btn-success me-1">
                <i class="bi bi-pencil-square fs-5"></i>
              </a>
              <a href="/estoque/excluir/{{ item.id }}"  class="btn btn-sm btn-danger ms-1" onclick="return confirm('Excluir esse item?')" title="Excluir">
                <i class="bi bi-trash fs-5"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

    <div class="text-center mt-3">
      <a href="/estoque" class="link"><small>Ver mais</small></a>
    </div>
  </main>
{% endblock %}

{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/public/assets/js/mododark.js"></script>
  <script src="/public/assets/js/agendamentos.js"></script>
{% endblock %}
